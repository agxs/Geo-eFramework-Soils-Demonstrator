MAP
  NAME "gefc_result"

  IMAGECOLOR 255 255 255
  STATUS ON
  EXTENT 0.0 0.0 700000.0 1300000.0

  SIZE 300 300
  SHAPEPATH "indexes"

  UNITS METERS
  PROJECTION
    "init=epsg:27700"
  END

  WEB
    METADATA
      "wms_title" "Gefc Soil Erosion Result for ${user}"
      "wms_contactperson" "EDINA Helpdesk"
      "wms_contactorganization" "EDINA"
      "wms_contactvoicetelephone" "0131 650 3302"
      "wms_contactfacsimiletelephone" "0131 650 3308"
      "wms_contactelectronicmailaddress" "edina@ed.ac.uk"
      "wms_onlineresource" "http://localhost/cgi-bin/mapserv?map=${dataFolder}${user}/result.map&"
      "wms_srs" "EPSG:27700 EPSG:4326"
    END
  END

LAYER
  NAME "result"
  TOLERANCE 1
  TOLERANCEUNITS pixels
  PROCESSING "BANDS=1"
  PROCESSING "SCALE=1,1000000"

  METADATA
    "wms_title" "Gefc Result"
    "wms_srs"   "EPSG:27700 EPSG:4326"
    "wms_extent" "0.0 0.0 700000.0 1300000.0"
  END

  DATA "${dataFolder}${user}/result.tiff"
  STATUS OFF
  TYPE RASTER
  OFFSITE 0 0 0
  CLASS
    NAME "green"
    EXPRESSION ([pixel] > 0 AND [pixel] < 100)
    STYLE
      COLORRANGE 0 255 0 0 64 0
      DATARANGE 1 100
      RANGEITEM "[pixel]"
    END
  END
  CLASS
    NAME "red"
    EXPRESSION ([pixel] >= 100)
    STYLE
      COLORRANGE 64 0 0 255 0 0
      DATARANGE 100 1000
      RANGEITEM "[pixel]"
    END
  END

  MINSCALEDENOM 100.0
  MAXSCALEDENOM 1000000000.0
  PROJECTION
    "init=epsg:27700"
  END
END

OUTPUTFORMAT
  NAME png
  DRIVER "GD/PNG"
  MIMETYPE "image/png"
  IMAGEMODE RGBA
  EXTENSION "png"
END

END